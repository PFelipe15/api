generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")  
  directUrl = env("POSTGRES_URL_NON_POOLING")  
}

// Model para armazenar as medições
model Measure {
  id               Int      @id @default(autoincrement()) // Identificador único da medição
  customer_code    String   // Código do cliente
  measure_datetime DateTime // Data e hora da medição
  measure_type     String   // Tipo de medição: "WATER" ou "GAS"
  measure_value    Int      // Valor da medição
  measure_uuid     String   // UUID gerado pela API do LLM
  image_url        String   // URL da imagem processada pelo LLM
  createdAt        DateTime @default(now()) // Data e hora de criação
  updatedAt        DateTime @updatedAt // Data e hora da última atualização

}

